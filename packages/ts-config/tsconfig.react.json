{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "allowJs": true,
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Bundler Config: */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
